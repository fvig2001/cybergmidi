<Window x:Class="CyberG.PatternWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberG"
        mc:Ignorable="d"
        Title="{DynamicResource PatternWindowTitle}" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="5px"/>
            <RowDefinition />
            <RowDefinition Height ="5px"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5px"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="5px"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <!-- Controls-->
                    <ColumnDefinition Width="335"/>
                    <ColumnDefinition Width="15px"/>
                    <!--Pattern Editor-->
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="2" BorderBrush="Black" BorderThickness="2" CornerRadius="5" Padding="10">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <!-- Picture-->
                                <RowDefinition/>
                                <RowDefinition Height="5"/>
                                <!-- Navigation-->
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="5"/>
                                <!-- Listbox of patterns-->
                                <RowDefinition/>
                                <RowDefinition Height="5"/>
                                
                                <RowDefinition Height="5"/>
                                <!--Management Buttons-->
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <!-- Picture-->
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <!-- Pattern name -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="1" Name="patternNameTextBox" Width="150" VerticalContentAlignment="Center"/>
                                    <Button Grid.Column="2" Name="saveButton" Content="{DynamicResource Save}" Width="40" HorizontalAlignment="Right" Click="saveButton_Click"/>
                                    
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="1">        
                                        <Canvas Name="NoteCanvas" Width="350" Height="185" Background="White"/>
                                    </Border>
                                </Grid>
                            </Grid>
                            <!-- Navigation Buttons-->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="25"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Width="25" Name="previousButton" Content="&lt;" Click="previousButton_Click"/>
                                <Button Grid.Column="2" Width="25" Name="playSampleButton" Height="25" Click="playButton_Click">
                                    <Image Source="Images/play.png"
                                    Stretch="Uniform"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                                </Button>
                                <Button Grid.Column="4" Width="25" Name="nextButton" Content="&gt;" Click="nextButton_Click"/>
                            </Grid>
                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <ListBox Grid.Column="1" Name="patternListBox"/>

                            </Grid>

                            <Grid Grid.Row="7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="100"/>

                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Name="importMidiButton" Content="{DynamicResource ImportMidi}" Click="importMidiButton_Click"/>
                                <Button Grid.Column="2" Name="deleteButton" Content="{DynamicResource Delete}" Click="deleteButton_Click"/>
                                <Button Grid.Column="4" Name="uploadButton" Content="{DynamicResource Upload}" Click="uploadButton_Click"/>

                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="2" CornerRadius="5" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <!-- Omnichord Mode-->
                            <RowDefinition Height="60px"/>
                            <RowDefinition Height="5px"/>
                            <!-- Instrument Select-->
                            <RowDefinition/>
                            <RowDefinition Height="5px"/>
                            <!-- Play button-->
                            <RowDefinition Height="25px"/>
                        </Grid.RowDefinitions>
                        <!-- Backing mode-->
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="27"/>
                                <RowDefinition Height="5px"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Content="{DynamicResource BackingTrack}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="155"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <ComboBox Name="BackingModeComboBox" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" />
                                <Button Name="playBackingButton" Grid.Column="3" Width="20" Height="20" VerticalAlignment ="Center" Click="playBackingButton_Click">
                                    <Image Source="Images/play.png"
                                   Stretch="Uniform"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                </Button>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20px"/>
                                <RowDefinition Height="5px"/>
                                <RowDefinition Height="20px"/>
                                <RowDefinition Height="5px"/>
                                <RowDefinition Height="20px"/>
                                <RowDefinition Height="5px"/>
                                <RowDefinition Height="20px"/>
                                <RowDefinition Height="5px"/>
                                <RowDefinition Height="20px"/>
                                <RowDefinition Height="5px"/>
                                <RowDefinition Height="20px"/>
                                <RowDefinition Height="5px"/>
                                <RowDefinition Height="20px"/>
                                <RowDefinition Height="5px"/>
                                <RowDefinition Height="20px"/>
                                <RowDefinition Height="5px"/>
                                <RowDefinition Height="20px"/>
                                <RowDefinition Height="5px"/>
                                <RowDefinition Height="20px"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!--Instrument 1-->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <RadioButton Grid.Column="0" Name="guitar0PatternRadioButton" Content="{DynamicResource GuitarPattern0}" GroupName="Instruments"/>
                                <Button Grid.Column="2" Name="playButton0">
                                   <Image Source="Images/play.png"
                                   Stretch="Uniform"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                </Button>
                                <TextBox Grid.Column="4" Name="guitar0PatternTextBox" IsReadOnly="True" VerticalContentAlignment="Center"/>
                            </Grid>
                            <!--Instrument 2-->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <RadioButton Grid.Column="0" Name="guitar1PatternRadioButton" Content="{DynamicResource GuitarPattern1}" GroupName="Instruments"/>
                                <Button Grid.Column="2" Name="playButton1">
                                    <Image Source="Images/play.png"
                                       Stretch="Uniform"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                                    </Button>
                                <TextBox Grid.Column="4" Name="guitar1PatternTextBox" IsReadOnly="True"  VerticalContentAlignment="Center"/>
                            </Grid>
                            <!--Instrument 3-->
                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <RadioButton Grid.Column="0" Name="guitar2PatternRadioButton" Content="{DynamicResource GuitarPattern2}" GroupName="Instruments"/>
                                <Button Grid.Column="2" Name="playButton2">
                                    <Image Source="Images/play.png"
                                   Stretch="Uniform"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                </Button>
                                <TextBox Grid.Column="4" Name="guitar2PatternTextBox" IsReadOnly="True" VerticalContentAlignment="Center"/>
                            </Grid>
                            <!--Instrument 4-->
                            <Grid Grid.Row="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <RadioButton Grid.Column="0" Name="bassPatternRadioButton" Content="{DynamicResource BassPattern}" GroupName="Instruments"/>
                                <Button Grid.Column="2" Name="playButton3">
                                    <Image Source="Images/play.png"
                                    Stretch="Uniform"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                                </Button>
                                <TextBox Grid.Column="4" Name="bassPatternTextBox" IsReadOnly="True" VerticalContentAlignment="Center"/>
                            </Grid>
                            <!--Instrument 5-->
                            <Grid Grid.Row="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <RadioButton Grid.Column="0" Name="backingPatternRadioButton" Content="{DynamicResource BackingPattern}" GroupName="Instruments"/>
                                <Button Grid.Column="2" Name="playButton4">
                                    <Image Source="Images/play.png"
                                   Stretch="Uniform"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                </Button>
                                <TextBox Grid.Column="4" Name="backingPatternTextBox" IsReadOnly="True" VerticalContentAlignment="Center"/>
                            </Grid>
                            <!--Instrument 6-->
                            <Grid Grid.Row="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <RadioButton Grid.Column="0" Name="drumPatternRadioButton0" Content="{DynamicResource DrumPattern0}" GroupName="Instruments"/>
                                <Button Grid.Column="2" Name="playButton5">
                                    <Image Source="Images/play.png"
                                   Stretch="Uniform"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                </Button>
                                <TextBox Grid.Column="4" Name="drumPatternTextBox0" IsReadOnly="True" VerticalContentAlignment="Center"/>
                            </Grid>
                            <!--Instrument 7-->
                            <Grid Grid.Row="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <RadioButton Grid.Column="0" Name="drumPatternRadioButton1" Content="{DynamicResource DrumPattern1}" GroupName="Instruments"/>
                                <Button Grid.Column="2" Name="playButton6">
                                    <Image Source="Images/play.png"
                                   Stretch="Uniform"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                </Button>
                                <TextBox Grid.Column="4" Name="drumPatternTextBox1" IsReadOnly="True" VerticalContentAlignment="Center"/>
                            </Grid>
                            <!--Instrument 8-->
                            <Grid Grid.Row="14">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <RadioButton Grid.Column="0" Name="drumPatternRadioButton2" Content="{DynamicResource DrumPattern2}" GroupName="Instruments"/>
                                <Button Grid.Column="2" Name="playButton7">
                                    <Image Source="Images/play.png"
                                   Stretch="Uniform"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                </Button>
                                <TextBox Grid.Column="4" Name="drumPatternTextBox2" IsReadOnly="True" VerticalContentAlignment="Center"/>
                            </Grid>
                            <!--Instrument 9-->
                            <Grid Grid.Row="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <RadioButton Grid.Column="0" Name="drumPatternRadioButton3" Content="{DynamicResource DrumPattern3}" GroupName="Instruments"/>
                                <Button Grid.Column="2" Name="playButton8">
                                    <Image Source="Images/play.png"
                                   Stretch="Uniform"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                </Button>
                                <TextBox Grid.Column="4" Name="drumPatternTextBox3" IsReadOnly="True" VerticalContentAlignment="Center"/>
                            </Grid>
                            <!--Instrument 10-->
                            <Grid Grid.Row="18">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="5px"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <RadioButton Grid.Column="0" Name="drumPatternRadioButton4" Content="{DynamicResource DrumPattern4}" GroupName="Instruments"/>
                                <Button Grid.Column="2" Name="playButton9">
                                    <Image Source="Images/play.png"
                               Stretch="Uniform"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                                </Button>
                                <TextBox Grid.Column="4" Name="drumPatternTextBox4" IsReadOnly="True" VerticalContentAlignment="Center"/>
                            </Grid>
                            
                        </Grid>
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35px"/>
                                <ColumnDefinition Width="5px"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="5px"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0" Content="BPM"/>
                            <TextBox Grid.Column="2" Name="bpmTextBox" VerticalContentAlignment="Center"/>
                            <Button Grid.Column="4" Width="80" Name="savePatternButton" Content="Save to ROM"/>
                            <Button Grid.Column="6" Width="80" Name="closeButton" Content="{DynamicResource Close}" Height="25" Margin="10,0,10,0" VerticalAlignment="Top" Click="closeButton_Click"/>

                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
